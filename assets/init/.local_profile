# 开启系统代理
function proxy_on() {
        # proxy_on
        # proxy_on {{prot#}}
        local port=7890
        if [[ $# -eq 1 && $1 =~ ^[0-9]+$ ]]; then
                port=$1
        fi
        export http_proxy=http://127.0.0.1:$port
        export https_proxy=http://127.0.0.1:$port
        export no_proxy=127.0.0.1,localhost
        export HTTP_PROXY=http://127.0.0.1:$port
        export HTTPS_PROXY=http://127.0.0.1:$port
        export NO_PROXY=127.0.0.1,localhost
        echo -e "\033[32m[√] 已开启代理，端口 $port\033[0m"
}

# 关闭系统代理
function proxy_off(){
        unset http_proxy
        unset https_proxy
        unset no_proxy
        unset HTTP_PROXY
        unset HTTPS_PROXY
        unset NO_PROXY
        echo -e "\033[31m[×] 已关闭代理\033[0m"
}


